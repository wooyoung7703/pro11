{
  "name": "xrp-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173",
    "dev:mock": "cross-env VITE_USE_MOCKS=1 vite --host 0.0.0.0 --port 5173",
    "dev:nomock": "cross-env VITE_USE_MOCKS=0 vite --host 0.0.0.0 --port 5173",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "vite build",
    "preview": "vite preview --port 4173",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "dompurify": "^3.2.7",
    "lightweight-charts": "^4.2.0",
    "msw": "^2.11.3",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.12.7",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.29.0",
    "jsdom": "^24.1.3",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "typescript-eslint": "^8.11.0",
    "vite": "^6.3.6",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.0.29"
  },
  "vitest": {
    "environment": "jsdom",
    "setupFiles": [
      "tests/setup/msw.ts"
    ]
  }
}
