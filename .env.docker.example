# Copy this file to .env.docker (ignored) and adjust values as needed.
# These values are used by docker-compose.yml automatically if you reference them with ${VAR} syntax.

POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=mydata
POSTGRES_USER=postgres
POSTGRES_PASSWORD=traderpass

# External host ports
# Production/snapshot compose maps DB -> DB_EXTERNAL_PORT (default 5432)
DB_EXTERNAL_PORT=5432
# Dev compose maps DB -> DEV_DB_EXTERNAL_PORT (default 55432) to avoid conflicts
DEV_DB_EXTERNAL_PORT=55432
# Application external port
APP_PORT=8000

APP_ENV=docker
LOG_LEVEL=INFO
FAST_STARTUP=true  # only honored by dev compose

# Feature toggles
AUTO_RETRAIN_ENABLED=false
AUTO_PROMOTE_ENABLED=false
CALIBRATION_MONITOR_ENABLED=false
INGESTION_ENABLED=false
SKIP_DB=false

# Optional: override pool size
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=5

# If TimescaleDB image swap later
# TIMESCALEDB_ENABLED=false
